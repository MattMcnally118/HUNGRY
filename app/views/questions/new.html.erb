<div class="container d-flex justify-content-center align-items-center min-vh-100 mt-5">
  <div class="bg-white border shadow-lg rounded-4 p-4" style="max-width: 500px;">
    <h2 class="mb-4 text-center">Tell us about your preferences</h2>

    <%= simple_form_for @question do |f| %>
      <div class="mb-3">
        <%= f.input :price_range,
                    as: :select,
                    collection: ['$', '$$', '$$$', '$$$$', '$$$$$'],
                    prompt: 'Select your budget',
                    label: "What’s your budget?",
                    input_html: { class: 'form-select rounded-pill' } %>
      </div>

      <div class="mb-3">
        <%= f.input :number_of_people,
                    as: :integer,
                    label: "How many people are you eating with?",
                    input_html: { type: 'number', class: 'form-control rounded-pill', placeholder: 'Enter number of diners' } %>
      </div>

      <div class="mb-3">
        <%= f.input :current_mood,
                    as: :string,
                    label: "What’s the mood of the restaurant you're looking for?",
                    hint: "One word atmosphere, e.g. Casual, Romantic, Trendy",
                    input_html: { class: 'form-control rounded-pill', placeholder: 'e.g. Casual, Romantic, Family‑Friendly' } %>
      </div>

      <div class="mb-3">
        <%= f.input :dietary_restrictions,
                    as: :radio_buttons,
                    collection: ['Vegetarian', 'Vegan', 'Gluten‑Free', 'Pescatarian', 'None'],
                    label: 'Do you have any dietary restrictions?',
                    item_wrapper_tag: :div,
                    wrapper_html: { class: 'form-check' },
                    input_html: { class: 'form-check-input rounded' },
                    label_html: { class: 'form-check-label' } %>
      </div>

      <div class="mb-3">
        <%= f.input :cuisine_type,
                    as: :string,
                    label: 'What kind of cuisine are you craving?',
                    input_html: { class: 'form-control rounded-pill', placeholder: 'e.g. Japanese, Fine‑Dining, African' } %>
      </div>

      <div class="text-center">
        <%= f.button :submit, 'Submit', class: 'btn btn-ghost rounded-pill px-5' %>
      </div>
    <% end %>
  </div>
</div>
