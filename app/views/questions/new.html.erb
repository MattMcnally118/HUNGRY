
  <%= simple_form_for @question, html: { class: 'needs-validation', novalidate: true } do |f| %>
  <div class="container">
  <div class="row">
    <div class="w-50 mx-auto">
      <%= simple_form_for @question, html: { class: 'needs-validation', novalidate: true } do |f| %>
        <div class="mb-3">
          <%= f.input :budget, as: :integer, label: 'Budget', input_html: { class: 'form-control', placeholder: 'Enter budget' } %>
        </div>

        <div class="mb-3">
          <%= f.input :number_of_people, as: :integer, label: 'Number of People', input_html: { class: 'form-control', placeholder: 'Enter number of people' } %>
        </div>

        <div class="mb-3">
          <%= f.input :current_mood, label: 'Current Mood', input_html: { class: 'form-control', placeholder: 'Describe mood' } %>
        </div>

        <div class="mb-3">
          <%= f.input :dietary_restrictions, as: :text, label: 'Dietary Restrictions', input_html: { class: 'form-control', placeholder: 'List any dietary restrictions', rows: 3 } %>
        </div>

        <div class="mb-3">
          <%= f.input :cuisine_type, label: 'Cuisine Type', input_html: { class: 'form-control', placeholder: 'Preferred cuisine type' } %>
        </div>

        <div class="mb-3 text-center">
          <%= f.button :submit, "Submit", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% end %>
