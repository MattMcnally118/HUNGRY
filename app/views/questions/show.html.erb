<div class="recommendation-page py-5 d-flex justify-content-center align-items-center">
  <div class="recommendation-card p-5 text-center shadow-lg">

    <h1 class="mb-4 fw-bold"> Your Match Is In!</h1>

    <h2 class="restaurant-name mb-4"><%= @question.restaurant&.name || "No match found" %></h2>

    <p class="reasoning mb-5">
      <strong>Why:</strong> <%= @question.cleaned_ai_reasoning %>
    </p>

    <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
      <div>
        <%= button_to "Save to My Profile", save_booking_question_path(@question),
              method: :post,
              class: "btn-find" %>
      </div>
      <div>
        <%= link_to "Discard", question_path(@question),
              class: "btn-discard",
              data: { turbo_method: "delete", turbo_confirm: "Are you sure?" } %>
      </div>
    </div>

  </div>
</div>
