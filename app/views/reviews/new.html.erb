<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="bg-white border border-secondary rounded-4 shadow-lg p-4" style="max-width: 500px;">
    <h2 class="text-center mb-4">Rate <%= @restaurant.name %></h2>

    <%= simple_form_for [@restaurant, @review] do |f| %>
      <div class="mb-3">
        <%= f.input :rating,
                    collection: (1..5).to_a,
                    label: "Rate your experience",
                    input_html: {
                      class: "form-select rounded-pill",
                      data: { controller: "star-rating" }
                    } %>
      </div>

      <div class="mb-3">
        <%= f.input :photos,
                    as: :file,
                    label: "Upload photos",
                    input_html: { multiple: true, class: "form-control rounded-pill" } %>
      </div>

      <div class="text-center">
        <%= f.button :submit, "Submit Review", class: "btn btn-ghost rounded-pill px-5" %>
      </div>
    <% end %>
  </div>
</div>
